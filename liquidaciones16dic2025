// Seleccionar / deseleccionar todas las planillas visibles
document.getElementById('seleccionar_todas').addEventListener('change', function(){
    const checkboxes = document.querySelectorAll('input[name="planilla_ids[]"]:not(:disabled)');
    checkboxes.forEach(cb => cb.checked = this.checked);
});
