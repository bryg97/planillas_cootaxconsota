<?php
// cartera.php - agrupar por veh√≠culo; pagar deuda total por veh√≠culo y pagar 1 planilla
ini_set('display_errors',1); ini_set('display_startup_errors',1); error_reporting(E_ALL);
session_start();
include __DIR__ . '/../../config_planillas/config.php';
date_default_timezone_set('America/Bogota');

if(!isset($_SESSION['rol'])){ header("Location: login.php"); exit(); }
$rol = $_SESSION['rol'];
$usuario = $_SESSION['usuario'] ?? '';
$user_id = $_SESSION['id_usuario'] ?? null;

$ok=''; $error='';

// Asegurar columna pagada
$conn->query("ALTER TABLE planillas ADD COLUMN IF NOT EXISTS pagada TINYINT(1) DEFAULT 0");

// ------------ 1) PAGAR 1 PLANILLA (individual) ------------
if($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['pagar_una']) && ($rol === 'tesorera' || $rol === 'admin')) {
    $planilla_id = intval($_POST['planilla_id']);
    $conn->begin_transaction();
    try {
        // obtener planilla y vehiculo
        $p = $conn->query("SELECT * FROM planillas WHERE id = $planilla_id AND tipo='credito' LIMIT 1")->fetch_assoc();
        if(!$p) throw new Exception("Planilla no encontrada o no es cr√©dito.");

        $veh_id = intval($p['vehiculo_id']);
        $valor = floatval($p['valor']);

        // obtener saldo actual del veh√≠culo
        $veh = $conn->query("SELECT saldo, codigo_vehiculo FROM vehiculos WHERE id = $veh_id LIMIT 1")->fetch_assoc();
        if(!$veh) throw new Exception("Veh√≠culo no encontrado.");

        $saldo_antes = floatval($veh['saldo']);
        $saldo_despues = $saldo_antes + $valor;

        // insertar en planillas_historial con saldo_antes/saldo_despues
        $colsRes = $conn->query("SHOW COLUMNS FROM planillas");
        $cols = [];
        while($c = $colsRes->fetch_assoc()) $cols[] = $c['Field'];
        // a√±adir saldo_antes/saldo_despues si existen en historial
        $has_saldo_antes = $conn->query("SHOW COLUMNS FROM planillas_historial LIKE 'saldo_antes'")->num_rows>0;
        $has_saldo_despues = $conn->query("SHOW COLUMNS FROM planillas_historial LIKE 'saldo_despues'")->num_rows>0;

        $cols_hist = $cols;
        if($has_saldo_antes && !in_array('saldo_antes',$cols_hist)) $cols_hist[] = 'saldo_antes';
        if($has_saldo_despues && !in_array('saldo_despues',$cols_hist)) $cols_hist[] = 'saldo_despues';

        $cols_list = implode(", ", array_map(fn($c)=>"`$c`", $cols_hist));
        $values = [];
        foreach($cols as $col){
            if(!isset($p[$col]) || $p[$col] === null) $values[] = "NULL";
            else $values[] = "'".$conn->real_escape_string((string)$p[$col])."'";
        }
        if($has_saldo_antes) $values[] = $conn->real_escape_string((string)$saldo_antes);
        if($has_saldo_despues) $values[] = $conn->real_escape_string((string)$saldo_despues);
        $vals_list = implode(", ", $values);

        $conn->query("INSERT INTO planillas_historial ($cols_list) VALUES ($vals_list)");

        // eliminar planilla original
        $conn->query("DELETE FROM planillas WHERE id = $planilla_id");

        // actualizar saldo del veh√≠culo
        $stmt = $conn->prepare("UPDATE vehiculos SET saldo = ? WHERE id = ?");
        $stmt->bind_param("di", $saldo_despues, $veh_id);
        $stmt->execute();
        $stmt->close();

        // marcar pagada en historial (si aplicara) - ya qued√≥ en historial con info
        // auditoria y supervisor_logs
        $desc = "Pago individual planilla $planilla_id veh {$veh['codigo_vehiculo']} valor $valor por $usuario";
        $conn->query("INSERT INTO auditoria (usuario,accion,detalles) VALUES ('".$conn->real_escape_string($usuario)."','Pago planilla individual','".$conn->real_escape_string($desc)."')");
        $conn->query("INSERT INTO supervisor_logs (archivo,tipo,descripcion,accion_realizada,usuario) VALUES ('cartera.php','fix','". $conn->real_escape_string($desc) ."','pago_individual','".$conn->real_escape_string($usuario)."')");

        $conn->commit();

        // Enviar Telegram (OPCI√ìN: enviar mensaje individual + saldo restante)
        // NOTA: segun tu confirmaci√≥n, env√≠os individuales S√ç deben ir a Telegram (respondiste 1 antes)
        $cfg = $conn->query("SELECT telegram_token, telegram_chatid FROM configuracion LIMIT 1")->fetch_assoc();
        $telegram_token = $cfg['telegram_token'] ?? '';
        $telegram_chatid = $cfg['telegram_chatid'] ?? '';
        if(!empty($telegram_token) && !empty($telegram_chatid)){
            $fecha_msg = date("d/m/Y h:i a");
            $msg = "‚úÖ *PAGO PLANILLA*\n\n";
            $msg .= "üöñ Veh√≠culo: *".$conn->real_escape_string($veh['codigo_vehiculo'])."* \n";
            $msg .= "üßæ Planilla N¬∞: *".$conn->real_escape_string($p['numero_planilla'])."* \n";
            $msg .= "üë§ Conductor: *".$conn->real_escape_string($p['conductor'])."* \n";
            $msg .= "üí∏ Valor pagado: *$".number_format($valor,0,',','.')."* \n\n";
            $msg .= "üí∞ Saldo antes: *$".number_format($saldo_antes,0,',','.')."* \n";
            $msg .= "üí∞ Saldo despu√©s: *$".number_format($saldo_despues,0,',','.')."* \n";
            $msg .= "üïí $fecha_msg\n";
            $msg .= "üßæ Registr√≥: *$usuario*";

            // enviar
            $post = ['chat_id'=>$telegram_chatid,'text'=>$msg,'parse_mode'=>'Markdown'];
            $ch = curl_init("https://api.telegram.org/bot".$telegram_token."/sendMessage");
            curl_setopt($ch, CURLOPT_POST, true);
            curl_setopt($ch, CURLOPT_POSTFIELDS, $post);
            curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
            curl_exec($ch);
            curl_close($ch);
        }

        $ok = "Planilla pagada correctamente.";
    } catch(Exception $e){
        $conn->rollback();
        $error = "Error al pagar planilla: " . $e->getMessage();
    }
    header("Location: cartera.php");
    exit();
}

// ------------ 2) PAGAR TODAS LAS PLANILLAS DE UN VEH√çCULO ------------
if($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['pagar_veh']) && ($rol === 'tesorera' || $rol === 'admin')) {
    $veh_id = intval($_POST['veh_id']);
    $conn->begin_transaction();
    try {
        // obtener planillas pendientes (credito) para ese vehiculo ordenadas por fecha ASC (m√°s vieja primero)
        $res = $conn->query("SELECT * FROM planillas WHERE vehiculo_id = $veh_id AND tipo='credito' AND (pagada=0 OR pagada IS NULL) ORDER BY fecha ASC");
        $planillas = [];
        while($r = $res->fetch_assoc()) $planillas[] = $r;

        if(count($planillas) === 0){
            $conn->commit();
            $ok = "No hay deudas para este veh√≠culo.";
            header("Location: cartera.php");
            exit();
        }

        // obtener saldo actual
        $veh = $conn->query("SELECT saldo, codigo_vehiculo FROM vehiculos WHERE id = $veh_id LIMIT 1")->fetch_assoc();
        if(!$veh) throw new Exception("Veh√≠culo no encontrado.");
        $saldo_actual = floatval($veh['saldo']);
        $saldo_corriente = $saldo_actual;
        $total_pagado = 0;

        // traer columnas once
        $colsRes = $conn->query("SHOW COLUMNS FROM planillas");
        $cols = [];
        while($c = $colsRes->fetch_assoc()) $cols[] = $c['Field'];
        $has_saldo_antes = $conn->query("SHOW COLUMNS FROM planillas_historial LIKE 'saldo_antes'")->num_rows>0;
        $has_saldo_despues = $conn->query("SHOW COLUMNS FROM planillas_historial LIKE 'saldo_despues'")->num_rows>0;
        $cols_hist = $cols;
        if($has_saldo_antes && !in_array('saldo_antes',$cols_hist)) $cols_hist[] = 'saldo_antes';
        if($has_saldo_despues && !in_array('saldo_despues',$cols_hist)) $cols_hist[] = 'saldo_despues';
        $cols_list = implode(", ", array_map(fn($c)=>"`$c`", $cols_hist));

        foreach($planillas as $p) {
            $valor = floatval($p['valor']);
            $saldo_antes = $saldo_corriente;
            $saldo_corriente += $valor;
            $saldo_despues = $saldo_corriente;

            // insertar en historial con saldos
            $values = [];
            foreach($cols as $col){
                if(!isset($p[$col]) || $p[$col] === null) $values[] = "NULL";
                else $values[] = "'".$conn->real_escape_string((string)$p[$col])."'";
            }
            if($has_saldo_antes) $values[] = $conn->real_escape_string((string)$saldo_antes);
            if($has_saldo_despues) $values[] = $conn->real_escape_string((string)$saldo_despues);
            $vals_list = implode(", ", $values);
            $conn->query("INSERT INTO planillas_historial ($cols_list) VALUES ($vals_list)");

            // eliminar original
            $conn->query("DELETE FROM planillas WHERE id = ".intval($p['id']));

            $total_pagado += $valor;
        }

        // actualizar saldo vehiculo al final
        $stmt = $conn->prepare("UPDATE vehiculos SET saldo = ? WHERE id = ?");
        $stmt->bind_param("di", $saldo_corriente, $veh_id);
        $stmt->execute();
        $stmt->close();

        // auditoria y supervisor log
        $conn->query("INSERT INTO auditoria (usuario,accion,detalles) VALUES ('".$conn->real_escape_string($usuario)."','Pago total vehiculo','Pago total veh $veh_id valor $total_pagado')");
        $conn->query("INSERT INTO supervisor_logs (archivo,tipo,descripcion,accion_realizada,usuario) VALUES ('cartera.php','fix','Pago total veh $veh_id valor $total_pagado','pago_total','".$conn->real_escape_string($usuario)."')");

        // enviar Telegram resumiendo el pago total del veh√≠culo (si config existe)
        $cfg = $conn->query("SELECT telegram_token, telegram_chatid FROM configuracion LIMIT 1")->fetch_assoc();
        $telegram_token = $cfg['telegram_token'] ?? '';
        $telegram_chatid = $cfg['telegram_chatid'] ?? '';
        if(!empty($telegram_token) && !empty($telegram_chatid)){
            $fecha_msg = date("d/m/Y h:i a");
            $msg = "‚úÖ *PAGO TOTAL VEH√çCULO*\n\n";
            $msg .= "üöñ Veh√≠culo: *".$conn->real_escape_string($veh['codigo_vehiculo'])."* \n";
            $msg .= "üë§ Autoriz√≥: *".$conn->real_escape_string($usuario)."* \n\n";
            $msg .= "*Planillas pagadas:*\n";
            foreach($planillas as $p) {
                $msg .= "- N¬∞".$conn->real_escape_string($p['numero_planilla'])." ‚Üí $". number_format($p['valor'],0,',','.')."\n";
            }
            $msg .= "\nüí∏ *Total pagado:* $". number_format($total_pagado,0,',','.')."\n";
            $msg .= "üïí ".$fecha_msg;
            // enviar
            $post = ['chat_id'=>$telegram_chatid,'text'=>$msg,'parse_mode'=>'Markdown'];
            $ch = curl_init("https://api.telegram.org/bot".$telegram_token."/sendMessage");
            curl_setopt($ch, CURLOPT_POST, true);
            curl_setopt($ch, CURLOPT_POSTFIELDS, $post);
            curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
            curl_exec($ch);
            curl_close($ch);
        }

        $conn->commit();
        $ok = "Se pagaron ".count($planillas)." planillas. Total: $".number_format($total_pagado,0,',','.');
    } catch(Exception $e){
        $conn->rollback();
        $error = "Error al pagar deuda total: " . $e->getMessage();
    }
    header("Location: cartera.php");
    exit();
}

// ------------ 3) LISTADO VEH√çCULOS CON DEUDA (solo los que deben) ------------
$res = $conn->query("
    SELECT v.id as veh_id, v.codigo_vehiculo, SUM(p.valor) as total_deuda, COUNT(p.id) as n_planillas
    FROM planillas p
    INNER JOIN vehiculos v ON p.vehiculo_id = v.id
    WHERE p.tipo='credito' AND (p.pagada = 0 OR p.pagada IS NULL)
    GROUP BY v.id
    HAVING total_deuda > 0
    ORDER BY CAST(REPLACE(v.codigo_vehiculo,'J-','') AS UNSIGNED) ASC
");

// recolectar filas en array para luego generar modales fuera de la tabla
$veh_rows = [];
while($row = $res->fetch_assoc()){
    $veh_rows[] = $row;
}
?>
<!doctype html>
<html lang="es">
<head><meta charset="utf-8"><title>Cartera</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"></head>
<body class="p-4">
<a href="panel.php" class="btn btn-secondary mb-3">‚¨Ö Panel</a>
<h3>Cartera - Cr√©ditos pendientes (por veh√≠culo)</h3>

<?php if($ok): ?><div class="alert alert-success"><?=htmlspecialchars($ok)?></div><?php endif;?>
<?php if($error): ?><div class="alert alert-danger"><?=htmlspecialchars($error)?></div><?php endif;?>

<table class="table table-striped">
<thead><tr><th>Veh√≠culo</th><th># planillas</th><th>Total deuda</th><th>Acci√≥n</th></tr></thead>
<tbody>
<?php foreach($veh_rows as $r): ?>
<tr>
  <td><?=htmlspecialchars($r['codigo_vehiculo'])?></td>
  <td><?=intval($r['n_planillas'])?></td>
  <td><?=number_format($r['total_deuda'],0,',','.')?></td>
  <td>
    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detModal<?=intval($r['veh_id'])?>">üîç Ver detalle</button>
    <?php if($rol==='tesorera' || $rol==='admin'): ?>
      <form method="POST" style="display:inline" onsubmit="return confirm('¬øPagar deuda total de este veh√≠culo?');">
        <input type="hidden" name="pagar_veh" value="1">
        <input type="hidden" name="veh_id" value="<?=intval($r['veh_id'])?>">
        <button class="btn btn-sm btn-success">Pagar deuda total</button>
      </form>
    <?php endif; ?>
  </td>
</tr>
<?php endforeach; ?>
</tbody>
</table>

<!-- MODALES (fuera de la tabla) -->
<?php foreach($veh_rows as $r): ?>
  <?php
    $vehId = intval($r['veh_id']);
    $det = $conn->query("SELECT id,fecha,numero_planilla,conductor,cedula_conductor,ciudad_origen,ciudad_destino,valor FROM planillas WHERE vehiculo_id = $vehId AND tipo='credito' AND (pagada=0 OR pagada IS NULL) ORDER BY fecha DESC");
  ?>
  <div class="modal fade" id="detModal<?=intval($r['veh_id'])?>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Detalle planillas cr√©dito - <?=htmlspecialchars($r['codigo_vehiculo'])?></h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <table class="table table-sm">
            <thead><tr><th>ID</th><th>Fecha</th><th>N¬∞</th><th>Conductor</th><th>C√©dula</th><th>Origen</th><th>Destino</th><th>Valor</th><th>Acci√≥n</th></tr></thead>
            <tbody>
            <?php while($d = $det->fetch_assoc()): ?>
              <tr>
                <td><?=intval($d['id'])?></td>
                <td><?=date("d/m/Y h:i a", strtotime($d['fecha']))?></td>
                <td><?=htmlspecialchars($d['numero_planilla'])?></td>
                <td><?=htmlspecialchars($d['conductor'])?></td>
                <td><?=htmlspecialchars($d['cedula_conductor'])?></td>
                <td><?=htmlspecialchars($d['ciudad_origen'])?></td>
                <td><?=htmlspecialchars($d['ciudad_destino'])?></td>
                <td><?=number_format($d['valor'],0,',','.')?></td>
                <td>
                  <?php if($rol==='tesorera' || $rol==='admin'): ?>
                    <form method="POST" onsubmit="return confirm('¬øPagar esta planilla?');" style="display:inline">
                      <input type="hidden" name="pagar_una" value="1">
                      <input type="hidden" name="planilla_id" value="<?=intval($d['id'])?>">
                      <button class="btn btn-sm btn-success">Pagar</button>
                    </form>
                  <?php else: ?>
                    <small>No autorizado</small>
                  <?php endif; ?>
                </td>
              </tr>
            <?php endwhile; ?>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
<?php endforeach; ?>

